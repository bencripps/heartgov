div(class='modal fade #{prefix}reply-modal')
    div(class='modal-dialog')
        div(class='modal-content')
            div(class='modal-header')
                button(type='button' class='close' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true')
                h4(class='modal-title #{prefix}modal-title') <3 Gov Messenger
            div(class='modal-body #{prefix}modal-body' style='text-align:center;')
                
                form(name='out-going-text-form')
                    div
                        div(class='form-group') 
                            div(class='input-group #{prefix}form-group')
                                div(class='input-group-addon #{prefix}form-label') from
                                input(type='text' name='from' class='form-control input-sm #{prefix}disabled' disabled='')
                            

                    div
                        div(class='form-group') 
                            div(class='input-group #{prefix}form-group')
                                div(class='input-group-addon #{prefix}form-label') to
                                input(type='text' name='to' class='form-control input-sm #{prefix}disabled' disabled='')
                            

                    div
                        div(class='form-group') 
                            div(class='input-group #{prefix}form-group')
                                div(class='input-group-addon #{prefix}form-label') content
                                textarea(name='content' class='form-control input-sm')
                            span(class='help-block #{prefix}help-block-reply-form') this field is required!

            div(class='modal-footer')
                button(class='btn btn-success' id='send-out-going-text') send
                button(class='btn btn-danger #{prefix}modal-close' data-dismiss='modal') cancel