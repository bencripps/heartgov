extend ./layout

block content

    div(id='press-background-cover' class='#{prefix}hero-image')
        table
                tr
                    td
                        img(src='min/images/news-logo.png')
                        
                tr 
                    td
                        h1 Heartgov in the news!

    div(class='container')
        div(class='row' style='margin-top:-200px;')
            - each obj in stories
                div(class='col-xs-6' style='margin-bottom:5%;')
                    div(class='#{prefix}story #{prefix}hero-image' style="background-image:url(#{obj.img});")
                        img(src='#{obj.img}' style='visibility:hidden; width:100%;')
                        div(class='story-overlay')
                            div(class='story-cover')
                                div
                                    h4 #{obj.title}

                                    p #{obj.content}

                                    h5
                                        a(href="#{obj.link}") Open Story &gt;
